<p id="notice"><%= notice %></p>

<div class="d-flex align-items-center">
  <h1>投稿一覧</h1>
  <div class="ml-auto posts_button">
    <%= link_to '新規投稿', new_post_path %>
  </div>
</div>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">

    <tr>
        <th scope="col" styke="width: 700px">タイトル</th>
        <th>いつやるのか</th>
        <th>本文</th>
        <th>写真</th>
        <th>投稿日時</th>
        <th>投稿者</th>
        <th>詳細</th>
        <th>編集</th>
        <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.date %></td>
        <td><%= post.body %></td>
        <td><%= image_tag post.picture %></td>
        <td><%= post.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= paginate @posts %>
